<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TREEHOUSE</title>
</head>
<script>
    const root = {{ .API_ROOT }};
    const subscribeeID = {{ .user_id }};

    function Subscribe() {
        fetch("/create/subscribe", {
            method: "POST",
            body: JSON.stringify({
                subscribeeID: subscribeeID,
            }),
            headers: {
                "Content-Type": "application/json",
            }
        }).then(res => res.json()).then(res => {
            if (res.status == 200) {
                alert("Subscribed!");
            } else {
                alert("Error subscribing!");
            }
        });
    }
</script>
<link rel="stylesheet" href="/styles/root.css">
<link rel="stylesheet" href="/styles/profile.css">
<body class="flexWrapperVertical">
    <div class="header fixed">
        TREEHOUSE
    </div>

    <div class="pageContentsScroll profileBody">
        <div class="pageTitle">{{ .username }}</div>
        <a class="linkButton" href="/create/create-article">Create</a>
        
        {{if .check}}
        <div></div>
        {{else}}
        <button onclick="Subscribe()">Subscribe</button>
        {{end}}
        

        <div class="articleBody">
            <ul>
                {{ range $a := .articles }}
                    <li><a href="/{{ $.username }}/{{ $a.Slug }}">{{ $a.Title }}</a></li>
                {{ end }}
            </ul>
        </div>
    </div>
</body>
</html>
