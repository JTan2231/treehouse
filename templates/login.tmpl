<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<script>
    function keydown(e) {
        if (e.keyCode === 13) {
            createUserAttempt();
            return;
        }
    }

    function createUserAttempt() {
        return;
        const values = getFieldValues();
        fetch('http://localhost:8080/login', {
            method: 'POST',
            body: JSON.stringify({
                username: values.username,
                password: values.password,
            }),
            headers: {
                'Content-Type': 'application/json',
            },
        }).then(res => res.json()).then(res => {
            console.log('response received:', res);
        });
    }

    function getFieldValues() {
        return {
            username: document.getElementById('username').value,
            password: document.getElementById('password').value,
        };
    }
        
</script>
<style>
    body {
        margin: 0;
    }

    body, input, button {
        font-family: URW Gothic L;
    }

    input, button {
        font-size: 16px;
        margin: 0.5em;
    }

    input {
        border: 1px solid transparent;
        border-bottom: 1px solid black;
        outline: 0;
        transition: 0.5s all;
        padding: 0.25em 0 0.25em 0.25em;
        width: 20em;
    }

    input:hover {
        border: 1px solid black;
    }

    input:focus {
        border: 1px solid black;
        background-color: #ddd;
    }

    button {
        color: black;
        background-color: white;
        border: 1px solid black;
        padding: 0.25em 0.25em 0 0.25em;
        transition: all 0.5s;
        cursor: pointer;
    }

    button:hover {
        color: white;
        background-color: black;
    }

    a {
        position: relative;
        color: black;
        text-decoration: none;
        font-weight: bold;
    }

    a::after {
        content: '';
        position: absolute;
        height: 0.1em;
        width: 0;
        right: 0;
        bottom: 0;
        background-color: black;
        transition: width 0.3s;
    }

    a:hover::after {
        left: 0;
        width: 100%;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        align-content: center;
        justify-content: center;
        width: 100vw;
        height: 100vh;
    }

    .item, .footer {
        flex-basis: 100%;
        display: flex;
        justify-content: center;
    }

    .footer {
        margin-top: 10em;
    }

    .title, .subtitle {
        flex-basis: 100%;
        text-align: center;
    }

    .title {
        font-size: 96px;
    }

    .subtitle {
        font-size: 30px;
        margin-bottom: 1.5em;
    }
</style>
<body>
    <div class="container">
        <div class="title">TREEHOUSE</div>
        <div class="subtitle">Lightweight blogging platform.</div>
        <div>
            <div class="item">
                <input id="username" type="text" placeholder="Username" onkeydown="keydown(event)" />
            </div>
            <div class="item">
                <input id="password" type="text" placeholder="Password" onkeydown="keydown(event)" />
            </div>
            <div class="item">
                <button onclick="createUserAttempt()">Login</button>
            </div>
            <div class="footer">
                No account?&nbsp;<a href="http://localhost:8080/newuser">Create one here</a>.
            </div>
        </div>
    </div>
</body>
</html>
