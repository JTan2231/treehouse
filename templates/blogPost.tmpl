<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<script>
    function createArticleAttempt() {
        const title = document.getElementById('title').value;
        const content = document.getElementById('content').value;

        fetch(`${ {{ .API_ROOT }} }/articles`, {
            method: 'POST',
            body: JSON.stringify({
                Title: title,
                Content: content,
            }),
            headers: {
                'Content-Type': 'application/json',
            }
        })
    }
</script>
<link rel="stylesheet" href="/styles/blogPost.css">
<body>

    <div class="header">
    <div class="title text">TREEHOUSE</div>
    </div>

    <div class="container">
      <div class="main"> 
        <h1 class="text article-title">Create New Article</h1>
        <div class="formfield">
            <input type="text" name="articleTitle" id="title" placeholder="Essay Title">
            <div class="pad">
            <textarea class="textarea" name="content" id="content" placeholder="Essay Content"></textarea>
            </div>
            <button class="postButton text" onclick="createArticleAttempt()">Post</button>
        </div>
      </div>
    </div>
</body>
</html>
