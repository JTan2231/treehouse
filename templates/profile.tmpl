<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TREEHOUSE</title>
</head>
<script>
    const root = {{ .API_ROOT }};
    const subscribeeID = {{ .user_id }};

    function onSubscribe() {
        fetch("/subscribe", {
            method: "POST",
            body: JSON.stringify({
                subscribeeID: subscribeeID,
            }),
            headers: {
                "Content-Type": "application/json",
            }
        }).then(res => res.json()).then(res => {
            if(document.getElementById("subscribe").innerHTML == "Subscribe") {
                document.getElementById("subscribe").innerHTML = "Unsubscribe";
            } else {
                document.getElementById("subscribe").innerHTML = "Subscribe";
            }

            alert(res.message);
        });
    }


    function deleteArticle(element, event) {
        event.preventDefault();
        const grandparent = element.parentElement.parentElement;

        fetch("/delete-article", {
            method: "POST",
            body: JSON.stringify({
                articleID: parseInt(grandparent.id),
            }),
            headers: {
                "Content-Type": "application/json",
            }
        }).then(res => res.json()).then(res => {
            alert(res.message);
        });

        grandparent.remove();
    }

</script>
<link rel="stylesheet" href="/styles/root.css">
<link rel="stylesheet" href="/styles/profile.css">
<body class="flexWrapperVertical">
    {{ template "header.tmpl" .}}

    <div class="pageContentsScroll profileBody">
        <div class="pageTitle">
            {{ .profileUsername }}
            <img class="dashboardImage" src="{{ .profilePicURL }}">
        </div>
        <p style="display:inline-block; overflow-wrap: break-word;">{{ .bio }}</p>

        {{if .twitterCheck}} 
            <div class="twitterContainer" id="twitter"> 
                <img class="twitterLogo" src="http://localhost:8080/assets/twitterLogo.png">
                <a class="twitterLink" href="{{ .twitterURL }}">{{ .profileUsername }}</a>
            </div>
        {{end}}
        
        {{if .check}}
        <a class="linkButton" href="/create-article">Create</a>
        <a class="linkButton" href="/edit-profile">Edit Profile</a>
        {{else}}{{if .alreadySubscribed}}
        <button id="subscribe" class="linkButton" onclick="onSubscribe()">Unsubscribe</button>
        {{else}}
        <button id="subscribe" class="linkButton" onclick="onSubscribe()">Subscribe</button>
        {{end}}{{end}}

        <div class="contentContainer">
            <div class="postLinkList">
                <div class="listHeader">Posts</div>
                {{ range $a := .articles }}
                        <a id={{ $a.ArticleID }} class="articleLink" href="/{{ $a.Username }}/{{ $a.Slug }}">
                            <div class="articleLinkContainer">
                                <div onclick="deleteArticle(this, event)" class="delete-button">...</div>
                                <div style="cursor:pointer;" class="title">{{ $a.Title }}</div>
                                <div style="cursor:pointer;" class="subtitle">{{ $a.Subtitle }}</div>
                                <div style="cursor:pointer;" class="date">{{ $a.TimestampPosted }}</div>
                                <div style="cursor:pointer;" class="readTime">{{ $a.ReadTime }} â€¢ MIN READ</div>
                            </div>
                        </a>
                {{ end }}
            </div>
        </div>

        <div class="contentContainer">
            <div class="linkList">
                <div class="listHeader">Favorites</div>
                {{ range $f := .favorites }}
                    <div class="linkContainer">
                        <a class="articleLink" href="/{{ $f.Username }}/{{ $f.Slug }}">{{ $f.Title }}</a>
                    </div>
                {{ end }}
            </div>
            <div class="linkList">
                <div class="listHeader">Subscriptions</div>
                {{ range $s := .subscriptions }}
                    <div class="linkContainer">
                        <a class="articleLink" href="/{{ $s }}">{{ $s }}</a>
                    </div>
                {{ end }}
            </div>
        </div>
    </div>
</body>
</html>
